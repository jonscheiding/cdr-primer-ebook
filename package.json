{
  "name": "cdr-primer-ebook",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "cli": "babel-node src/cli",
    "prepare:scrape": "babel-node src/cli scrape > ./build/scraped.json",
    "build:transform": "babel-node src/cli transform --input ./build/scraped.json > ./build/transformed.json",
    "build:generate": "babel-node src/cli generate --input ./build/transformed.json --output ./build/generated.epub",
    "build:babel": "babel src -d build/dist --source-maps",
    "start": "run-p start:watch start:server",
    "start:unzip": "rimraf ./build/unzipped && unzip -o -d ./build/unzipped build/generated.epub",
    "start:server": "serve -s -l tcp://127.0.0.1:5100 build/unzipped/OEBPS",
    "start:html": "run-s build:transform build:generate start:unzip",
    "start:watch": "nodemon --ignore build/ -e ejs,js,css,json --exec yarn run start:html"
  },
  "dependencies": {
    "@babel/core": "^7.13.8",
    "@babel/node": "^7.13.0",
    "@babel/preset-env": "^7.13.9",
    "cheerio": "^1.0.0-rc.5",
    "crawler": "^1.3.0",
    "ejs": "^3.1.6",
    "envalid": "^7.0.0",
    "epub-gen": "^0.1.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "eslint": "^7.21.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2"
  }
}
